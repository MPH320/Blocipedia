<html>
  <head>
    <title>Blocipedia</title>
 
     <meta name="viewport" content="width=device-width, initial-scale=1">
       <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
       <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
       <%= csrf_meta_tags %>
  </head>
  <body>
   <div class="container">
     <ul class="nav nav-tabs">
       <li><%= link_to "Home", welcome_index_path %></li>
       <li><%= link_to "About", welcome_about_path %></li>
       <div class="pull-right user-info">
           <% if user_signed_in? %>
            Hello <strong><%= current_user.email %></strong>
            <%= image_tag avatar_url(current_user.email, 40) %>
            <% else %>
             Please sign in or sign up
           <% end %>
       </div>
       
     </ul>
  
  <%= yield %>
  
     <% if user_signed_in? %>
   Signed in as: <strong><%= current_user.email %></strong>
   </br><%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> - <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
 <% end %>
   </div>
   

  
  </body>
  </html>